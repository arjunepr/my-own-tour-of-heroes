.content
  h1, h2, .header
    text-align center
  font-family Arial, Helvetica, sans-serif
  color #333
  letter-spacing 1px
  line-height 1.5

.selected
  background-color #CFD8DC
  color white




.heroes
  list-style-type none
  padding 0
  margin 0

  li
    margin 1rem auto
    cursor pointer
    position relative
    left 0
    background-color #EEE
    margin 0.5rem
    padding 0.3rem 0
    height 1.6rem
    border-radius 5px
    transition all 0.2s ease

    &.selected:hover
      background-color #BBD8DC
      color white

    &:hover
      color #607D8B
      background-color #DDD
      left 0.1rem


.heroes .text
  position relative
  top -3px


.heroes .badge
  display inline-block
  font-size 12px
  color white
  padding 0.8rem 0.7rem 0 0.7rem
  background-color #607D8B
  line-height 1rem
  position relative
  left -1px
  top -7px
  // height 1.8rem
  height 100%
  margin-right 0.8rem
  border-radius 4px 0 0 4px

.heroItem
  display flex
  // align-items stretch
  // flex-
  

.details
  text-transform capitalize
  margin 2.5rem 0
  // text-align center

  input
    // text-align center
    padding 0.25rem
    border 2px solid #555
    border-radius 5px
    
